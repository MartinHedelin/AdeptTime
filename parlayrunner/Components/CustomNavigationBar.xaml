<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    x:Class="AdeptTime.Components.CustomNavigationBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- Custom Navigation Bar with Status Bar Coverage -->
    <Grid BackgroundColor="#4A4E7C">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Status Bar Background Extension -->
        <BoxView 
            Grid.Row="0" 
            BackgroundColor="#4A4E7C" 
            HeightRequest="50" />
        
        <!-- Main Navigation Content -->
        <Grid Grid.Row="1" Padding="20,10,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            
            <Label 
                Grid.Column="0"
                Text="AdeptTime" 
                FontSize="22" 
                FontAttributes="Bold"
                TextColor="White"
                VerticalOptions="Center" />
            
            <Button 
                Grid.Column="1"
                Text="â˜°" 
                FontSize="22"
                TextColor="White"
                BackgroundColor="Transparent"
                VerticalOptions="Center"
                BorderWidth="0" />
        </Grid>
    </Grid>
</ContentView>
