<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AdeptTime.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AdeptTime.Views"
    FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="#4A4E7C"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#C8C8C8">

    <Shell.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#4A4E7C</Color>
        </ResourceDictionary>
    </Shell.Resources>

    <TabBar>
        <ShellContent
            Title="Kalender"
            Icon="naviconone.png"
            ContentTemplate="{DataTemplate local:KalenderView}"
            Route="kalender" />

        <ShellContent
            Title="Sager"
            Icon="navicontwo.png"
            ContentTemplate="{DataTemplate local:SagerView}"
            Route="sager" />

        <ShellContent
            Title="Ugeseddel"
            Icon="naviconthree.png"
            ContentTemplate="{DataTemplate local:UgeseddelView}"
            Route="ugeseddel" />

        <ShellContent
            Title="Indstillinger"
            Icon="naviconfour.png"
            ContentTemplate="{DataTemplate local:IndstillingerView}"
            Route="indstillinger" />
    </TabBar>

</Shell>
