@page "/sager"
@using AdeptTime.Shared.Models
@using AdeptTime.Shared.Components
@using AdeptTime.Shared.Interfaces
@using AdeptTime.Shared.Services
@inject ISaegsService SaegsService
@inject ICaseService CaseService
