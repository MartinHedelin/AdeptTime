@code {
    [Parameter] public List<TimeEntry> TimeEntries { get; set; } = new();
    [Parameter] public EventCallback<TimeEntry> OnStatusChanged { get; set; }

    private HashSet<int> expandedEmployees = new();
    private HashSet<int> selectedEmployees = new();
    private bool isDetailPanelVisible = false;
    private Employee? selectedEmployee = null;
    private List<TimeEntry>? selectedEmployeeEntries = null;
    private Dictionary<int, string> selectedStatuses = new();

    protected override void OnParametersSet()
    {
        // Initialize selected statuses for all time entries
        foreach (var entry in TimeEntries)
        {
            if (!selectedStatuses.ContainsKey(entry.Id))
            {
                selectedStatuses[entry.Id] = GetStatusText(entry.Status);
            }
        }
    }

    private Dictionary<int, List<TimeEntry>> GroupedTimeEntries
    {
        get
        {
            return TimeEntries
                .GroupBy(e => e.Employee.Id)
                .ToDictionary(g => g.Key, g => g.OrderBy(e => e.Date).ToList());
        }
    }

    private void ToggleExpansion(int employeeId)
    {
        if (expandedEmployees.Contains(employeeId))
        {
            expandedEmployees.Remove(employeeId);
        }
        else
        {
            expandedEmployees.Add(employeeId);
        }
        StateHasChanged();
    }

    private void HandleRowClick(int employeeId)
    {
        // For rows with multiple entries, toggle expansion
        var entries = GroupedTimeEntries[employeeId];
        if (entries.Count > 1)
        {
            ToggleExpansion(employeeId);
        }
        // For single entries, show detail panel directly
        else
        {
            ShowEmployeeDetail(employeeId);
        }
    }

    private void ShowEmployeeDetail(int employeeId)
    {
        var entries = GroupedTimeEntries[employeeId];
        selectedEmployee = entries.First().Employee;
        selectedEmployeeEntries = entries;
        isDetailPanelVisible = true;
        StateHasChanged();
    }

    private void ToggleEmployeeSelection(int employeeId, ChangeEventArgs e)
    {
        var isChecked = e?.Value is bool b && b;
        if (isChecked)
        {
            selectedEmployees.Add(employeeId);
        }
        else
        {
            selectedEmployees.Remove(employeeId);
        }
        StateHasChanged();
    }

    private void CloseDetailPanel()
    {
        isDetailPanelVisible = false;
        selectedEmployee = null;
        selectedEmployeeEntries = null;
        StateHasChanged();
    }

    private string FormatTotalHours(TimeSpan totalHours)
    {
        return $"{(int)totalHours.TotalHours}h {totalHours.Minutes}m";
    }

    private string FormatTimeBank(TimeSpan timeBank)
    {
        if (timeBank == TimeSpan.Zero)
            return "0h 0m";
        
        var sign = timeBank.TotalMinutes < 0 ? "-" : "";
        var hours = Math.Abs((int)timeBank.TotalHours);
        var minutes = Math.Abs(timeBank.Minutes);
        
        return $"{sign}{hours}h {minutes}m";
    }

    private string GetTimeBankClass(TimeSpan timeBank)
    {
        if (timeBank.TotalMinutes > 0) return "positive";
        if (timeBank.TotalMinutes < 0) return "negative";
        return "zero";
    }

    private string GetStatusClass(TimeEntryStatus status)
    {
        return status switch
        {
            TimeEntryStatus.Afventer => "pending",
            TimeEntryStatus.Godkendt => "approved",
            TimeEntryStatus.Afvist => "rejected",
            _ => "pending"
        };
    }

    private string GetStatusText(TimeEntryStatus status)
    {
        return status switch
        {
            TimeEntryStatus.Afventer => "Afventer",
            TimeEntryStatus.Godkendt => "Godkendt",
            TimeEntryStatus.Afvist => "Afvist",
            _ => "Afventer"
        };
    }

    private async Task UpdateStatus(int entryId, string? newStatus)
    {
        if (string.IsNullOrEmpty(newStatus)) return;

        var entry = TimeEntries.FirstOrDefault(e => e.Id == entryId);
        if (entry != null && Enum.TryParse<TimeEntryStatus>(newStatus, out var status))
        {
            entry.Status = status;
            await OnStatusChanged.InvokeAsync(entry);
        }
    }

    public void ApplyBulkStatus(string? newStatus)
    {
        if (string.IsNullOrWhiteSpace(newStatus)) return;
        if (!Enum.TryParse<TimeEntryStatus>(newStatus, out var status)) return;

        foreach (var entry in TimeEntries.Where(t => selectedEmployees.Contains(t.Employee.Id)))
        {
            entry.Status = status;
        }

        StateHasChanged();
    }

    private string GetDateRangeDisplay(List<TimeEntry> entries)
    {
        if (entries.Count == 1)
        {
            return entries.First().Date.ToString("dd MMMM yyyy");
        }
        
        var sortedDates = entries.OrderBy(e => e.Date).ToList();
        var firstDate = sortedDates.First().Date;
        var lastDate = sortedDates.Last().Date;
        
        if (firstDate.Month == lastDate.Month && firstDate.Year == lastDate.Year)
        {
            // Same month: "22-25 januar 2024"
            return $"{firstDate:dd}-{lastDate:dd} {firstDate:MMMM yyyy}";
        }
        else if (firstDate.Year == lastDate.Year)
        {
            // Same year: "22 jan - 25 feb 2024"
            return $"{firstDate:dd MMM} - {lastDate:dd MMM yyyy}";
        }
        else
        {
            // Different years: "22 jan 2024 - 25 feb 2025"
            return $"{firstDate:dd MMM yyyy} - {lastDate:dd MMM yyyy}";
        }
    }

    // Fix main checkbox behavior - deselect when detail checkbox is clicked
    private void ToggleDetailEntrySelection(int entryId, int employeeId, ChangeEventArgs e)
    {
        var isChecked = e?.Value is bool b && b;
        
        // If any detail checkbox is clicked, deselect the main checkbox
        if (isChecked)
        {
            selectedEmployees.Remove(employeeId);
        }
        
        StateHasChanged();
    }

    // Export to CSV functionality
    public void ExportToCSV(string teamFilter = "")
    {
        try
        {
            var csvContent = new System.Text.StringBuilder();
            
            // CSV Header
            csvContent.AppendLine("Medarbejder,Team,Dato,Check Ind,Check Ud,Timer Total,Timebank,Status,Godkendt Af");
            
            // CSV Data
            foreach (var entry in TimeEntries)
            {
                var approverName = entry.ApprovedBy?.Name ?? "";
                csvContent.AppendLine($"\"{entry.Employee.Name}\",\"{entry.Employee.Team}\",\"{entry.Date:dd/MM/yyyy}\",\"{entry.CheckIn:hh\\:mm}\",\"{entry.CheckOut:hh\\:mm}\",\"{FormatTotalHours(entry.TotalHours)}\",\"{FormatTimeBank(entry.TimeBank)}\",\"{GetStatusText(entry.Status)}\",\"{approverName}\"");
            }
            
            // Download CSV (in real app, would trigger file download)
            Console.WriteLine("=== CSV EXPORT ===");
            Console.WriteLine(csvContent.ToString());
            Console.WriteLine("=== END CSV ===");
            Console.WriteLine($"Exported {TimeEntries.Count} time entries" + (!string.IsNullOrEmpty(teamFilter) ? $" for team: {teamFilter}" : ""));
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ CSV Export failed: {ex.Message}");
        }
    }
} 