@using AdeptTime.Shared.Models

<div class="case-detail-overlay @(IsVisible ? "visible" : "")">
    <div class="case-detail-panel @(IsVisible ? "open" : "")">
        <!-- Header -->
        <div class="panel-header">
            <div class="header-content">
                <h2 class="panel-title">Sag Detaljer</h2>
                <p class="case-number">@SelectedCase?.CaseNumber</p>
            </div>
            <button class="close-btn" @onclick="ClosePanel">
                <i class="fas fa-times"></i>
            </button>
        </div>

        @if (SelectedCase != null)
        {
            <div class="panel-content">
                <!-- Case Info Section -->
                <div class="section">
                    <h3 class="section-title">Sag Information</h3>
                    <div class="info-grid">
                        <div class="info-item">
                            <label>Beskrivelse:</label>
                            <span>@SelectedCase.Description</span>
                        </div>
                        <div class="info-item">
                            <label>Kommentar:</label>
                            <span>@SelectedCase.Comment</span>
                        </div>
                        <div class="info-item">
                            <label>Kunde:</label>
                            <span>@SelectedCase.Customer.Name</span>
                        </div>
                        <div class="info-item">
                            <label>Afdeling:</label>
                            <span>@SelectedCase.Department</span>
                        </div>
                        <div class="info-item">
                            <label>Status:</label>
                            <span class="status-badge @GetStatusClass(SelectedCase.Status)">
                                @GetStatusText(SelectedCase.Status)
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Administration Section -->
                <div class="section">
                    <h3 class="section-title">Administration/Manager</h3>
                    <div class="employee-card">
                        <img src="@SelectedCase.Manager.AvatarUrl" alt="@SelectedCase.Manager.Name" class="employee-avatar" />
                        <div class="employee-details">
                            <div class="employee-name">@SelectedCase.Manager.Name</div>
                            <div class="employee-team">@SelectedCase.Manager.Team</div>
                        </div>
                    </div>
                </div>

                <!-- Hours Section -->
                <div class="section">
                    <h3 class="section-title">Udførte Timer</h3>
                    <div class="hours-summary">
                        <div class="hours-item">
                            <label>Udførte timer:</label>
                            <span class="hours-value">@SelectedCase.CompletedHours h</span>
                        </div>
                        <div class="hours-item">
                            <label>Total timer:</label>
                            <span class="hours-value">@SelectedCase.TotalHours h</span>
                        </div>
                        <div class="hours-item">
                            <label>Fremgang:</label>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @GetProgressPercentage()%"></div>
                                <span class="progress-text">@GetProgressPercentage()%</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Employees Section -->
                <div class="section">
                    <h3 class="section-title">Medarbejdere</h3>
                    <div class="employees-list">
                        <div class="employee-card">
                            <img src="@SelectedCase.AssignedEmployee.AvatarUrl" alt="@SelectedCase.AssignedEmployee.Name" class="employee-avatar" />
                            <div class="employee-details">
                                <div class="employee-name">@SelectedCase.AssignedEmployee.Name</div>
                                <div class="employee-team">@SelectedCase.AssignedEmployee.Team</div>
                                <div class="employee-role">Tildelt medarbejder</div>
                            </div>
                            <div class="employee-hours">
                                @SelectedCase.CompletedHours h
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Time Breakdown Section (Placeholder for future implementation) -->
                <div class="section">
                    <h3 class="section-title">Timer Breakdown</h3>
                    <div class="time-breakdown">
                        <p class="placeholder-text">Detaljeret timeoversigt vil blive implementeret her</p>
                        <p class="placeholder-text">Kolonner: Dato, Medarbejder, Check-in, Check-out, Timer, Beskrivelse</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .case-detail-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        visibility: hidden;
        opacity: 0;
        transition: all 0.3s ease;
        z-index: 1000;
    }

    .case-detail-overlay.visible {
        visibility: visible;
        opacity: 1;
    }

    .case-detail-panel {
        position: fixed;
        top: 0;
        right: -600px;
        width: 600px;
        height: 100vh;
        background: white;
        box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
        transition: right 0.3s ease;
        display: flex;
        flex-direction: column;
        z-index: 1001;
        overflow-y: auto;
    }

    .case-detail-panel.open {
        right: 0;
    }

    .panel-header {
        padding: 24px;
        border-bottom: 1px solid #e9ecef;
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        background: white;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .header-content {
        flex: 1;
    }

    .panel-title {
        margin: 0;
        font-size: 20px;
        font-weight: 600;
        color: #212529;
    }

    .case-number {
        margin: 4px 0 0 0;
        color: #6c757d;
        font-size: 14px;
    }

    .close-btn {
        background: none;
        border: none;
        font-size: 18px;
        color: #6c757d;
        cursor: pointer;
        padding: 4px;
        border-radius: 4px;
        transition: background-color 0.2s ease;
    }

    .close-btn:hover {
        background-color: #f8f9fa;
        color: #495057;
    }

    .panel-content {
        padding: 24px;
        flex: 1;
    }

    .section {
        margin-bottom: 32px;
    }

    .section-title {
        margin: 0 0 16px 0;
        font-size: 16px;
        font-weight: 600;
        color: #495057;
        border-bottom: 1px solid #e9ecef;
        padding-bottom: 8px;
    }

    .info-grid {
        display: grid;
        gap: 16px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .info-item label {
        font-weight: 500;
        color: #6c757d;
        font-size: 13px;
    }

    .info-item span {
        color: #212529;
        font-size: 14px;
    }

    .status-badge {
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        align-self: flex-start;
    }

    .status-badge.active {
        background-color: #d4edda;
        color: #155724;
    }

    .status-badge.pending {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-badge.review {
        background-color: #cce5ff;
        color: #004085;
    }

    .status-badge.completed {
        background-color: #e2e3e5;
        color: #495057;
    }

    .employee-card {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 16px;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 12px;
    }

    .employee-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
    }

    .employee-details {
        flex: 1;
    }

    .employee-name {
        font-weight: 500;
        color: #212529;
        font-size: 14px;
    }

    .employee-team {
        color: #6c757d;
        font-size: 12px;
        margin-top: 2px;
    }

    .employee-role {
        color: #495057;
        font-size: 11px;
        margin-top: 2px;
        font-style: italic;
    }

    .employee-hours {
        font-weight: 600;
        color: #495057;
        font-size: 14px;
    }

    .hours-summary {
        display: grid;
        gap: 16px;
    }

    .hours-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 16px;
        background: #f8f9fa;
        border-radius: 6px;
    }

    .hours-item label {
        font-weight: 500;
        color: #6c757d;
        font-size: 13px;
    }

    .hours-value {
        font-weight: 600;
        color: #212529;
        font-size: 14px;
    }

    .progress-bar {
        position: relative;
        width: 120px;
        height: 20px;
        background: #e9ecef;
        border-radius: 10px;
        overflow: hidden;
    }

    .progress-fill {
        height: 100%;
        background: #28a745;
        transition: width 0.3s ease;
    }

    .progress-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 11px;
        font-weight: 600;
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }

    .employees-list {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .time-breakdown {
        padding: 24px;
        background: #f8f9fa;
        border-radius: 8px;
        text-align: center;
    }

    .placeholder-text {
        color: #6c757d;
        font-style: italic;
        margin: 8px 0;
        font-size: 14px;
    }

    @@media (max-width: 768px) {
        .case-detail-panel {
            width: 100%;
            right: -100%;
        }
    }
</style>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public Case? SelectedCase { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task ClosePanel()
    {
        await OnClose.InvokeAsync();
    }

    private string GetStatusClass(CaseStatus status)
    {
        return status switch
        {
            CaseStatus.Badges => "active",
            CaseStatus.Pending => "pending",
            CaseStatus.Review => "review",
            CaseStatus.Completed => "completed",
            _ => "active"
        };
    }

    private string GetStatusText(CaseStatus status)
    {
        return status switch
        {
            CaseStatus.Badges => "Badges",
            CaseStatus.Pending => "Pending",
            CaseStatus.Review => "Review",
            CaseStatus.Completed => "Completed",
            _ => "Badges"
        };
    }

    private int GetProgressPercentage()
    {
        if (SelectedCase?.TotalHours == 0) return 0;
        return (int)Math.Round((double)(SelectedCase?.CompletedHours ?? 0) / (SelectedCase?.TotalHours ?? 1) * 100);
    }
}
